{
  "name": "@figma-vars/hooks",
  "version": "3.1.0",
  "description": "Typed React hooks for managing Figma Variables, modes, tokens, and bindings via API.",
  "author": "Mark Learst",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.cjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "typesVersions": {
    "*": {
      "core": [
        "dist/core.d.ts"
      ]
    }
  },
  "files": [
    "dist",
    "scripts"
  ],
  "bin": {
    "figma-vars-export": "./scripts/export-variables.mjs"
  },
  "keywords": [
    "figma",
    "figma variables",
    "figma tokens",
    "react",
    "react hooks",
    "design tokens",
    "theme",
    "storybook",
    "vite",
    "typescript",
    "design system"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marklearst/figma-vars-hooks.git"
  },
  "bugs": {
    "url": "https://github.com/marklearst/figma-vars-hooks/issues"
  },
  "homepage": "https://github.com/marklearst/figma-vars-hooks#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "postbuild": "cp dist/index.d.ts dist/index.d.cts || copy dist/index.d.ts dist/index.d.cts && cp dist/core.d.ts dist/core.d.cts || copy dist/core.d.ts dist/core.d.cts && cp dist/core/index.d.ts dist/core/index.d.cts || copy dist/core\\index.d.ts dist/core\\index.d.cts",
    "prepublishOnly": "pnpm build",
    "lint": "biome format --write .",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "postversion": "git push && git push --tags",
    "create:docs": "npx typedoc src/index.ts --out docs-site/api",
    "check:publint": "publint",
    "check:attw": "attw --pack .",
    "check:size": "size-limit",
    "check:release": "pnpm run build && pnpm run check:publint && pnpm run check:attw && pnpm run check:size",
    "prepare": "husky"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,json,md}": [
      "prettier --write"
    ]
  },
  "peerDependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "swr": "^2.3.7"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.ts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      },
      "default": "./dist/index.mjs"
    },
    "./core": {
      "import": {
        "types": "./dist/core/index.d.ts",
        "default": "./dist/core.mjs"
      },
      "require": {
        "types": "./dist/core/index.d.cts",
        "default": "./dist/core.cjs"
      },
      "default": "./dist/core.mjs"
    }
  },
  "publishConfig": {
    "access": "public",
    "provenance": true
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/marklearst"
  },
  "pnpm": {
    "overrides": {
      "vite": "^6.3.5"
    },
    "onlyBuiltDependencies": [
      "@biomejs/biome",
      "esbuild"
    ]
  },
  "packageManager": "pnpm@10.15.0",
  "devDependencies": {
    "@arethetypeswrong/cli": "^0.17.0",
    "@biomejs/biome": "^1.9.4",
    "@size-limit/preset-small-lib": "^11.1.5",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "2.1.9",
    "dotenv": "^16.5.0",
    "husky": "^9.1.7",
    "jsdom": "^26.1.0",
    "lint-staged": "^16.1.5",
    "prettier": "^3.6.2",
    "publint": "^0.3.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "size-limit": "^11.1.5",
    "swr": "^2.3.7",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.0.5"
  },
  "directories": {
    "doc": "docs"
  },
  "dependencies": {},
  "size-limit": [
    {
      "name": "modern ESM entry",
      "path": "dist/index.mjs",
      "import": "{ useVariables }",
      "limit": "10 kB"
    }
  ]
}
