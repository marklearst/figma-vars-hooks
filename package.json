{
  "name": "@figma-vars/hooks",
  "version": "1.3.3",
  "description": "Typed React hooks for managing Figma Variables, modes, tokens, and bindings via API.",
  "author": "Mark Learst",
  "license": "MIT",
  "type": "module",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "keywords": [
    "figma",
    "figma variables",
    "figma tokens",
    "react",
    "react hooks",
    "design tokens",
    "theme",
    "storybook",
    "vite",
    "typescript",
    "design system"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/marklearst/figma-vars-hooks.git"
  },
  "bugs": {
    "url": "https://github.com/marklearst/figma-vars-hooks/issues"
  },
  "homepage": "https://github.com/marklearst/figma-vars-hooks#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "npx eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:watch": "vitest watch",
    "postversion": "git push && git push --tags",
    "create:docs": "npx typedoc src/index.ts --out docs-site/api"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/marklearst"
  },
  "pnpm": {
    "overrides": {
      "vite": "^6.3.5"
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^24.0.3",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.5.2",
    "@vitest/coverage-v8": "^2.0.5",
    "@vitest/ui": "2.1.9",
    "dotenv": "^16.5.0",
    "jsdom": "^26.1.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "typescript": "~5.8.3",
    "vite": "^6.3.5",
    "vite-plugin-dts": "^4.5.4",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^2.0.5"
  },
  "directories": {
    "doc": "docs"
  },
  "dependencies": {
    "swr": "^2.3.3"
  }
}