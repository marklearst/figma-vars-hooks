{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "verbatimModuleSyntax": true,
    "moduleDetection": "force",
    "baseUrl": "./src",
    "noEmit": true,
    "jsx": "react-jsx",
    "types": [
      "vitest/globals"
    ],
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true,
    "paths": {
      "hooks/*": [
        "hooks/*"
      ],
      "mutations/*": [
        "mutations/*"
      ],
      "types/*": [
        "types/*"
      ],
      "utils/*": [
        "utils/*"
      ],
      "constants/*": [
        "constants/*"
      ],
      "contexts/*": [
        "contexts/*"
      ],
      "api/*": [
        "api/*"
      ],
      "tests/*": [
        "tests/*"
      ]
    }
  },
  "include": [
    "src",
    "tests",
    "vite.config.ts"
  ]
}