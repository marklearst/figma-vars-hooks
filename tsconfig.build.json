{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "noEmit": false,
    "outDir": "dist",
    "rootDir": "src",
    "stripInternal": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "tests",
    "**/*.test.ts",
    "**/*.test.tsx",
    "dist",
    "node_modules"
  ]
}

